<h1>Hero list!</h1>
#if ($heros)
  <ul>
    #foreach ($hero in $heros)
      <li>$hero.getDescription()</li>
    #end
  </ul>
#else
  <p>No heros!</p>
#end

<p>Add a new Hero:</p>

<form action="/heros" method="post">
  <label for="description">Hero Description</label>
  <input id="description" name="description" type="text">

  <button type="submit" class="btn btn-default">Add hero</button>
</form>
